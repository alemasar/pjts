{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "noImplicitAny": false,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["*"],
      "@cat/*": ["src/cat/src/*"],
      "@cat-server/*": ["src/cat/src/server/*"],
      "@cat-client/*": ["src/cat/src/client/*"],
      "@pjts-game/*": ["src/pjts/*"]
    }
  },
  "include": ["src"]
}
