{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["*"],
      "@cat/*": ["src/cat/src/*"],
      "@cat-server/*": ["src/cat/src/server/*"],
      "@cat-client/*": ["src/cat/src/client/*"],
      "@pjts-game/*": ["src/pjts/*"]
    }
  },
  "include": ["src", "module.d.ts"]
}
